<%- include("./includes/navbar.ejs"); %>

<div class="container">
  <br />
  <a href="addmaterial" class="btn blue">add material</a>
  <a
    href=""
    class="btn blue"
    id="csv"
    data-toggle="tooltip"
    title="To download more than file you need to give permission to the browser"
    >CSV</a
  >

  <table class="striped">
    <thead>
      <tr>
        <th id="name">Name</th>
        <th>Preview</th>
        <th>State</th>
        <th id="price">Price(/kg)</th>
        <th id="qty">Quantity(unit(s))</th>
        <th id="created">Created on</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% obj.forEach(function(object, index){%>
      <tr>
        <td><%= object.name %></td>
        <td>
          <img
            src="<%= url[index] %>"
            alt="preview"
            style="height: 100px; width: 200px"
          />
        </td>
        <td><%= object.state %></td>
        <td>$&nbsp;<%= object.price %></td>
        <td><%= object.qty %></td>
        <td><%= object.created_on%></td>
        <td>
          <form action="/editmaterial/<%= object._id %>" method="GET">
            <input type="submit" class="btn green" value="edit" />
          </form>
        </td>
        <td>
          <form action="/deletematerial/<%= object._id %>" method="post">
            <input type="submit" class="btn red" value="del" />
          </form>
        </td>
        <td>
          <form action="/showmaterials/<%= object._id %>" method="post">
            <input type="submit" class="btn blue" value="watch" />
          </form>
        </td>
      </tr>
      <% });%>
    </tbody>
  </table>
  <br /><br />
  <script src="./js/download_csv.js"></script>
  <script src="./js/sort_data.js"></script>
</div>
<%- include("./includes/footer.ejs")%>
